<resources>
    <!-- Base application theme. -->
    <style name="Theme.SiMovies" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_erie</item>
        <item name="colorPrimaryVariant">@color/black_erie</item>
        <item name="colorOnBackground">@color/black_erie</item>
        <item name="colorOnPrimary">@color/black_erie</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black_erie</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.SiMovies.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SiMovies.Tab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="RoundedShape.Item" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">@dimen/value_24dp</item>
        <item name="cornerSizeBottomRight">@dimen/value_24dp</item>
        <item name="cornerSizeTopLeft">@dimen/value_24dp</item>
        <item name="cornerSizeTopRight">@dimen/value_24dp</item>
    </style>
</resources>