<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/value_8dp"
    android:paddingStart="@dimen/value_0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_screenshot"
        android:layout_width="@dimen/value_200dp"
        android:layout_height="@dimen/value_120dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/RoundedShape.Item"
        tools:src="@color/white"/>

    <View
        android:layout_width="@dimen/value_0dp"
        android:layout_height="@dimen/value_0dp"
        android:background="@drawable/ic_shadow_item"
        app:layout_constraintRight_toRightOf="@+id/img_screenshot"
        app:layout_constraintLeft_toLeftOf="@+id/img_screenshot"
        app:layout_constraintTop_toTopOf="@+id/img_screenshot"
        app:layout_constraintBottom_toBottomOf="@+id/img_screenshot"/>

</androidx.constraintlayout.widget.ConstraintLayout>